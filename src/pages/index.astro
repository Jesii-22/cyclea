---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="fragment">Fragmento 1</div>
  <div class="fragment">Fragmento 2</div>
  <div class="logo">Logo de Cyclea</div>
  <!-- Agrega más elementos según necesites -->
</Layout>

<script>
  import { gsap } from 'gsap';

  // Ejecuta la animación cuando el componente se monte
  gsap.fromTo('.fragment', { opacity: 0, y: 50 }, { opacity: 1, y: 0, duration: 1, stagger: 0.2 });
  gsap.to('.logo', { scale: 1, duration: 1, delay: 1 });
</script>